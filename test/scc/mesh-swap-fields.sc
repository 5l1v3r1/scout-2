#include <assert.h> 
#include <stdio.h>

uniform mesh MyMesh {
 cells:
  float a;
  float b;
};

int main(int argc, char** argv) {

  MyMesh m[8];

  float i = 0.0f;
  forall cells c in m{
    a = i;
    b = 1000 + i;
    i += 1.0f;
  }

  swapFields(m.a, m.b);

  float expected_a[] = 
    {1000.0f, 1001.0f, 1002.0f, 1003.0f, 1004.0f, 1005.0f, 1006.0f, 1007.0f};  
  
  float expected_b[] =
    {0.0f, 1.0f, 2.0f, 3.0f, 4.0f, 5.0f, 6.0f, 7.0f};

  int j = 0;
  forall cells c in m{
    assert(a == expected_a[j] && "unexpected value");
    assert(b == expected_b[j] && "unexpected value");
    ++j;
  }

  return 0;
}
